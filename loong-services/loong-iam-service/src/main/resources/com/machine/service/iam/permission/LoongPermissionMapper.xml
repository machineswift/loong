<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.machine.service.iam.permission.dao.mapper.ILoongPermissionMapper">

    <select id="selectByUserId" resultType="com.machine.service.iam.permission.dao.mapper.entity.LoongPermissionEntity">
        SELECT p.*
        FROM t_permission p
                 LEFT JOIN t_user_permission_relation upr ON upr.permission_id = p.id
        WHERE upr.user_id = #{userId}
    </select>


    <select id="selectByRoleIds" resultType="com.machine.service.iam.permission.dao.mapper.entity.LoongPermissionEntity">
        SELECT p.*
        FROM t_permission p
                 LEFT JOIN t_role_permission_relation urr ON urr.permission_id = p.id
        WHERE urr.role_id IN
        <foreach item="item" collection="roleIds" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
</mapper>